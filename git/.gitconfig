[alias]
    co = "!f() { \
            args=$@; \
            if [ -z \"$args\" ]; then \
                branch=$(git branch | grep -v HEAD | fzf --preview 'echo {} | cut -c 3- | xargs git log --color --graph' | cut -c 3-); \
                git checkout $(echo $branch | sed 's#remotes/[^/]*/##'); \
            elif [ $1 = ' ]; then \
            elif [ $1 = '--all' ]; then \
                branch=$(git branch --all | grep -v HEAD | fzf --preview 'echo {} | cut -c 3- | xargs git log --color --graph' | cut -c 3-); \
                git checkout $(echo $branch | sed 's#remotes/[^/]*/##'); \
            else \
                git checkout $args; \
            fi \
        }; f"
